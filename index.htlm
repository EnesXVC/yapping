<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Webhook Spammer</title>
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #0f0f0f;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
    }
    h1 {
      margin-bottom: 20px;
      font-size: 2rem;
      color: #00bfff;
    }
    .container {
      width: 100%;
      max-width: 600px;
      background: #1c1c1c;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,255,255,0.2);
    }
    label {
      margin-top: 15px;
      display: block;
      font-weight: bold;
    }
    input, textarea, select {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border-radius: 5px;
      border: none;
      background-color: #333;
      color: white;
    }
    button {
      margin-top: 20px;
      padding: 12px;
      width: 100%;
      border: none;
      border-radius: 5px;
      background-color: #00bfff;
      color: white;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    button:hover {
      background-color: #0099cc;
    }
    .flex {
      display: flex;
      gap: 10px;
    }
    .flex input {
      flex: 1;
    }
  </style>
</head>
<body>
  <h1>Discord Webhook Spammer</h1>
  <div class="container">
    <label>Webhook URL</label>
    <input type="text" id="webhook" placeholder="https://discord.com/api/webhooks/..." />

    <label>Message</label>
    <textarea id="message" rows="4" placeholder="Enter your spam message..."></textarea>

    <label>Bot Name</label>
    <input type="text" id="username" placeholder="Custom Bot Name (optional)" />

    <label>Avatar URL</label>
    <input type="text" id="avatar" placeholder="https://example.com/avatar.png (optional)" />

    <div class="flex">
      <div style="flex: 1">
        <label>Delay (ms)</label>
        <input type="number" id="delay" value="1000" />
      </div>
      <div style="flex: 1">
        <label>Repeat Count</label>
        <input type="number" id="count" value="10" />
      </div>
    </div>

    <label>
      <input type="checkbox" id="tts" />
      TTS (Text-to-Speech)
    </label>

    <label>
      <input type="checkbox" id="delete" />
      Delete Webhook After Spam
    </label>

    <button onclick="startSpam()">Start Spam</button>
  </div>

  <script>
    async function startSpam() {
      const url = document.getElementById("webhook").value;
      const message = document.getElementById("message").value;
      const username = document.getElementById("username").value;
      const avatar = document.getElementById("avatar").value;
      const delay = parseInt(document.getElementById("delay").value);
      const count = parseInt(document.getElementById("count").value);
      const tts = document.getElementById("tts").checked;
      const shouldDelete = document.getElementById("delete").checked;

      if (!url || !message) {
        alert("Webhook URL ve mesaj gerekli.");
        return;
      }

      for (let i = 0; i < count; i++) {
        await fetch(url, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            content: message,
            username: username || undefined,
            avatar_url: avatar || undefined,
            tts: tts
          }),
        });
        await new Promise(res => setTimeout(res, delay));
      }

      if (shouldDelete) {
        await fetch(url, { method: "DELETE" });
        alert("Webhook silindi.");
      } else {
        alert("Spam tamamlandÄ±.");
      }
    }
  </script>
</body>
</html>
